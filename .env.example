# Obsidian Decision Engine - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
ENGINE_VERSION=1.0.0

# =============================================================================
# API SECURITY
# =============================================================================
# API key for client authentication (generate a secure random string)
API_KEY=your-secure-api-key-here

# Rate limiting (requests per minute per client)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
IDEMPOTENCY_TTL_MS=600000

# =============================================================================
# AI / LLM CONFIGURATION
# =============================================================================
# OpenAI API Key (or compatible provider)
OPENAI_API_KEY=sk-your-openai-api-key

# Model to use for reasoning synthesis
LLM_MODEL=gpt-4-turbo-preview

# Alternative: Use local LLM via Ollama or other OpenAI-compatible API
# LLM_BASE_URL=http://localhost:11434/v1
# LLM_MODEL=llama2

# Maximum tokens for explanation generation
LLM_MAX_TOKENS=500

# Temperature for explanation generation (0.0-1.0, lower = more deterministic)
LLM_TEMPERATURE=0.3

# =============================================================================
# DECISION ENGINE CONFIGURATION
# =============================================================================
# Default confidence threshold for decisions (0.0-1.0)
DEFAULT_CONFIDENCE_THRESHOLD=0.7

# Enable/disable AI-powered explanations (set to false for pure rule-based)
ENABLE_AI_EXPLANATIONS=true

# =============================================================================
# FINANCIAL THRESHOLDS (Override defaults from config)
# =============================================================================
# Minimum emergency fund months
MIN_EMERGENCY_FUND_MONTHS=3

# Critical debt-to-income ratio
CRITICAL_DTI_RATIO=0.5

# High APR threshold for debt prioritization
HIGH_APR_THRESHOLD=15.0
